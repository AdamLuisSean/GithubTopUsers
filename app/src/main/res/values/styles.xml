<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProfileLoginTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/profile_login_text_size</item>
    </style>

    <!--Profile -->

    <style name="ProfileDataTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/spacing_micro</item>
        <item name="android:layout_marginStart">@dimen/spacing_micro</item>
        <item name="android:layout_marginRight">@dimen/spacing_micro</item>
        <item name="android:layout_marginEnd">@dimen/spacing_micro</item>
    </style>

    <style name="ProfileDataTitleTextViewStyle" parent="ProfileDataTextViewStyle">
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:textSize">@dimen/profile_data_title_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ProfileDataDescriptionTextViewStyle" parent="ProfileDataTextViewStyle">
        <item name="android:textColor">@color/blue_grey_700</item>
        <item name="android:textSize">@dimen/profile_data_description_text_size</item>

    </style>

    <!--end-->

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
